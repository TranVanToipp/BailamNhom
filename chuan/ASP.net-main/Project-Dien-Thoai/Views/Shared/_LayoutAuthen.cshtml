<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
   
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
</head>
<style>
    .container {
        width: 500px;
        margin-top: 50px;
    }

    .btn-forget {
        margin-left: 188px;
    }

    .login {
        list-style-type: none;
    }
    a{
        text-decoration: none;
    }

    .btn {
        margin-top: 20px;
    }

    .luu {
        width: 20px;
        height: 20px;
    }
</style>
<body>
    @using (Html.BeginForm("Index", "Authen", FormMethod.Post))
    {<div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="text-center">Đăng nhập tài khoản</h2>
                <div style="color: red;text-align:center;"> @ViewBag.Error</div>
            </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="TenDN">Tên Đăng Nhập hoặc Email:</label>
                        <input required type="text" class="form-control" id="TenDN" name="TenDN">
                    </div>
                    <div class="form-group">
                        <label for="MatKhau">Mật khẩu:</label>
                        <input required type="password" class="form-control" id="MatKhau" name="MatKhau" minlength="6">
                    </div>
                    <div class="form-group">
                        <span><a href="@Url.Action("Index","Logout")">Đăng kí tài khoản mới</a></span>
                        <span><a href="@Url.Action("Index","QuenMK")" class="btn-forget">Quên Mật Khẩu</a></span>
                    </div>
                    <div class="form-group">
                        <input class="luu"  id="chkluu" type="checkbox" />
                        <label for="chkluu">Lưu</label>
                    </div>
                    <button class="btn btn-success">Đăng nhập</button>
                </div>
        </div>
    </div>}
    @RenderBody()
</body>
</html>
